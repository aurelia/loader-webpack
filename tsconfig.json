{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "types": ["node"],
    "stripInternal": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "build"
  ]
}
